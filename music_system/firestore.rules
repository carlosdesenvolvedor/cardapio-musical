rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permissivo para desenvolvimento e rede social
    
    // Regras para Usuários
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null; 
      
      match /notifications/{notificationId} {
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null;
      }
      
      match /following/{followingId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
      
      match /followers/{followerId} {
        allow read: if true;
        allow write: if request.auth != null;
      }

      match /profile_views/{viewId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null;
      }

      match /works/{workId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /services/{serviceId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Regras para Stories
    match /stories/{storyId} {
      allow read: if true;
      allow write: if request.auth != null;

      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;

        match /replies/{replyId} {
          allow read: if true;
          allow write: if request.auth != null;
        }
      }
    }
    
    // Regras para Posts e Comentários
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;

        match /replies/{replyId} {
          allow read: if true;
          allow write: if request.auth != null;
        }
      }
    }
    
    // Regras para Chats e Mensagens
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Regras para Pedidos (Requests)
    match /requests/{requestId} {
      allow read, write: if true; 
    }
    
    // Regras para Músicas/Repertório
    match /songs/{songId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regras para Bandas
    match /bands/{bandId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (resource.data.leaderId == request.auth.uid);
      
      match /members/{memberId} {
        allow read: if true;
        allow write: if request.auth != null;
      }

      match /events/{eventId} {
        allow read: if true;
        allow write: if request.auth != null && (get(/databases/$(database)/documents/bands/$(bandId)).data.leaderId == request.auth.uid);
      }
    }

    // Regras para Bookings
    match /bookings/{bookingId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.contractorId || 
        request.auth.uid == resource.data.targetId
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Regras para Eventos (Contratante)
    match /events/{eventId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.ownerId == request.auth.uid || request.auth.uid == eventId); 
    }

    // Regras para Serviços (Global Fallback - Collection Group)
    match /{path=**}/services/{serviceId} {
      allow read: if true;
    }
  }
}
