rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permissivo para desenvolvimento e rede social
    
    // Regras para Usuários (Permitindo que outros usuários atualizem seguidores)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }
    
    // Regras para Posts e Comentários
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      match /comments/{commentId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    // Regras para Chats e Mensagens
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Regras para Pedidos (Requests)
    match /requests/{requestId} {
      allow read, write: if true; 
    }
    
    // Regras para Músicas/Repertório
    match /songs/{songId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
